<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.FilesPage"
             Title="Ваши файлы"
             BackgroundColor="#1E1E1E">

    <!-- Основной контейнер -->
    <ScrollView>
        <StackLayout Padding="20" Spacing="10" HorizontalOptions="FillAndExpand">

            <!-- Заголовок -->
            <Label Text="Ваши файлы"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- Сообщение, если файлов нет -->
            <Label Text="Нет доступных файлов."
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasNoFiles}" />

            <!-- Список файлов -->
            <FlexLayout x:Name="FilesFlexContainer"
                        Wrap="Wrap"
                        JustifyContent="SpaceEvenly"
                        AlignItems="Center"
                        BindableLayout.ItemsSource="{Binding Files}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="5"
                                             Padding="10"
                                           
                                             WidthRequest="120"
                                             HorizontalOptions="Center">

                            <!-- Иконка файла -->
                            <ImageButton Source="file_icon.png"
             WidthRequest="80"
             HeightRequest="80"
         
             HorizontalOptions="Center"
             Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.FileSelectedCommand}"
             CommandParameter="{Binding .}" />


                            <!-- Название файла -->
                            <Label Text="{Binding Name}"
                                   FontSize="14"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
