<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.FilesPage"
             Title="Your Files"
             BackgroundColor="#1E1E1E">

    <!-- Main container -->
    <ScrollView>
        <StackLayout Padding="20" Spacing="10" HorizontalOptions="FillAndExpand">

            <!-- Header -->
            <Label Text="Your Files"
                   FontSize="24"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- Message if no files -->
            <Label Text="No available files."
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="{Binding HasNoFiles}" />

            <!-- File list -->
            <FlexLayout x:Name="FilesFlexContainer"
                        Wrap="Wrap"
                        JustifyContent="SpaceEvenly"
                        AlignItems="Center"
                        BindableLayout.ItemsSource="{Binding Files}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="5"
                                             Padding="10"
                                             WidthRequest="120"
                                             HorizontalOptions="Center">

                            <!-- File icon -->
                            <ImageButton Source="file_icon.png"
                                         WidthRequest="80"
                                         HeightRequest="80"
                                         HorizontalOptions="Center"
                                         Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.DownloadFileCommand}"
                                         CommandParameter="{Binding .}" />

                            <!-- File name -->
                            <Label Text="{Binding Name}"
                                   FontSize="14"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <!-- Buttons for file actions -->
            <Button Text="Upload File"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Command="{Binding UploadFileCommand}" />

            <!-- Optional: Button to delete or edit files if needed -->
        </StackLayout>
    </ScrollView>
</ContentPage>
