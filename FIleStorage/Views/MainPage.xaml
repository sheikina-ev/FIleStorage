<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.MainPage"
               BackgroundColor="#121212">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <Image Source="tree_illustration.png" 
               WidthRequest="200" 
               HeightRequest="200" 
               Aspect="AspectFit"
               HorizontalOptions="Center" />
        
        <Label Text="Ваши данные в&#xA;надёжных руках"
               FontSize="36"
               TextColor="White"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center" />
        
        <Label Text="Ваш ключ к эффективному&#xA;управлению информацией."
               FontSize="20"
               TextColor="Gray"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />
        
        <Button Text="НАЧАТЬ"
            BackgroundColor="#7A3EF8"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="12"
            WidthRequest="300"
            HeightRequest="50"
            Clicked="OnStartButtonClicked"
            ContentLayout="Left, 10">
        </Button>
    </StackLayout>
</ContentPage>