<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.Home"
             Title="Home">
    <VerticalStackLayout>
        <!-- Верхняя часть страницы -->
        <StackLayout Orientation="Horizontal" Padding="20" VerticalOptions="Start">
            <Image x:Name="AvatarImage" WidthRequest="50" HeightRequest="50" HorizontalOptions="Start" Margin="10"></Image>
            <Label x:Name="NicknameLabel" VerticalOptions="Center" FontAttributes="Bold" FontSize="18"></Label>
            
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>