<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.PermissionsPage"
             BackgroundColor="#1E1E1E"
             Title="Управление правами доступа">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <!-- Заголовок -->
            <Label Text="Управление правами доступа"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />

            <!-- Поле для ввода имени пользователя -->
            <Frame BackgroundColor="#2C2C2C"
                   CornerRadius="20"
                   Padding="10"
                   HasShadow="True">
                <Entry x:Name="UsernameEntry"
                       Placeholder="Введите никнейм пользователя"
                       PlaceholderColor="#A4A4A4"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       FontSize="14" />
            </Frame>

            <!-- Поле для ввода ID файла -->
            <Frame BackgroundColor="#2C2C2C"
                   CornerRadius="20"
                   Padding="10"
                   HasShadow="True">
                <Entry x:Name="FileIdEntry"
                       Placeholder="Введите ID файла"
                       PlaceholderColor="#A4A4A4"
                       Keyboard="Numeric"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       FontSize="14" />
            </Frame>

            <!-- Кнопка "Добавить доступ" -->
            <Button Text="Добавить доступ"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#FF0055"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    Clicked="OnAddAccessClicked">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="2,2" Radius="3" />
                </Button.Shadow>
            </Button>

            <!-- Кнопка "Удалить доступ" -->
            <Button Text="Удалить доступ"
                    FontSize="14"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#FF0055"
                    CornerRadius="20"
                    HeightRequest="50"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    Clicked="OnRemoveAccessClicked">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Offset="2,2" Radius="3" />
                </Button.Shadow>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
