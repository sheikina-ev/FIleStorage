<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FIleStorage.Views.UserFilesPage"
             BackgroundColor="#1E1E1E"
             Title="User Profile">
    <StackLayout Padding="20">
        <Label Text="Your Files"
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding UserFiles}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#333333" CornerRadius="10" Padding="10" Margin="0,10">
                        <StackLayout>
                            <Label Text="{Binding Name}" TextColor="White" FontSize="18" />
                            <Label Text="{Binding Size}" TextColor="White" FontSize="14" />
                            <Label Text="{Binding CreatedAt}" TextColor="White" FontSize="12" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>